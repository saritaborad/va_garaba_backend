<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- <link rel="stylesheet" href="style.css" /> -->
    <style>
        * {
            margin: 0px;
            padding: 0px;
        }

        body {
            height: auto;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .eventMainPage {
            max-width: 600px;
            width: 95%;
            margin-left: 5px;
            margin-right: 5px;
        }

        .eventImage {
            display: flex;
            justify-content: center;
            /* height: 200px;
        border: 1px solid black; */
        }

        .invoiceText h1 {
            color: #d0262a;
        }

        .nameandlogo {
            display: flex;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        /* Logo start */
        .eventLogo {
            margin-left: auto;
        }

        .eventLogo h3 {
            font-style: normal;
        }

        .eventLogo span {
            background-color: #df381d;
            color: #ffffff;
            padding-top: 5px;
            padding-bottom: 5px;
        }

        .eventLogo p {
            text-align: end;
            font-size: small;
        }

        /* Logo end */
        .invoiceDetails {
            display: flex;
            padding-top: 20px;
        }

        .invoiceData li {
            list-style-type: none;
            font-size: 16px;
            margin-right: 10px;
            line-height: 27px;
        }

        .gstNo {
            margin-left: auto;
        }

        .gstNo h4 {
            font-size: 14px;
        }

        .gstNo i {
            font-size: 12px;
            padding-top: 5px;
        }

        /* Table Start */
        .dataTable {
            width: 100%;
            margin-top: 30px;
        }

        .amountData {
            width: 100%;
        }

        .billInfo th {
            background-color: #d0262a;
            color: white;
            padding: 7px;
        }

        .billData td {
            text-align: center;
            padding-top: 10px;
            font-size: 16px;
        }

        .totalAmount {
            margin-top: 100px;
            border-top: 5px solid #d0262a;
        }

        .totalAmount {
            display: flex;
            padding-top: 5px;
        }

        .totalAmount b {
            font-size: 16px;
            margin-left: auto;
        }

        .totalAmount p {
            margin-left: 40px;
            font-size: 16px;
        }

        /* Table End */

        /* eventInfo Start */
        .eventInfo {
            margin-top: 30px;
            margin-bottom: 50px;
        }

        .phoneNumber {
            display: flex;
            align-items: center;
            margin-top: 5px;
        }

        .mail {
            display: flex;
            align-items: center;
            margin-top: 5px;
        }

        .address {
            display: flex;
            align-items: center;
            margin-top: 5px;
        }

        .webSite {
            display: flex;
            align-items: center;
            margin-top: 5px;
        }

        .callIcone {
            background-color: #d0262a;
            margin-right: 7px;
            padding: 4px;
            border-radius: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .mailIcone {
            background-color: #d0262a;
            margin-right: 7px;
            padding: 4px;
            border-radius: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .addressIcone {
            background-color: #d0262a;
            margin-right: 7px;
            padding: 4px;
            border-radius: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .webSiteIcone {
            background-color: #d0262a;
            margin-right: 7px;
            padding: 4px;
            border-radius: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* eventInfo End */
    </style>
</head>

<body>
    <div class="eventMainPage">
        <div class="eventInvoice">
            <div class="nameandlogo">
                <div class="invoiceText">
                    <h1>INVOICE</h1>
                </div>
                <div class="eventLogo">
                    <h3>THE<span>ME</span>MORIES</h3>
                    <p>EVENT</p>
                    <p>By Keval Jasoliya</p>
                </div>
            </div>
            <hr />
            <div class="invoiceDetails">
                <ul class="invoiceData">
                    <li>Invoice to</li>
                    <li>Transection ID</li>
                    <li>Invoice ID</li>
                    <li>Date</li>
                </ul>
                <ul class="invoiceData">
                    <li>: <%= name %>
                    </li>
                    <li>: <%= transaction_Id %>
                    </li>
                    <li>: <%= billdesk_order_id %>
                    </li>
                    <li>: <%= createdAt %>
                    </li>
                </ul>
                <% if (gstin && gstin.length> 0) { %>
                    <div class="gstNo">
                        <h4>GST No: <%= gstin %>
                        </h4>
                        <i>*ALL PRICING GST INCLUSIVE</i>
                    </div>
                    <% } %>
            </div>
            <div class="dataTable">
                <table class="amountData">
                    <tr class="billInfo">
                        <th>NO.</th>
                        <th>DESCRIPTIONS</th>
                        <th>QTY</th>
                        <th>PRICE</th>
                        <th>AMOUNT</th>
                    </tr>
                    <% for (let i=0; i < tickets.length; i++) { %>
                        <tr class="billData">
                            <td>1</td>
                            <td>
                                <%= tickets[i].ticket_name %>
                            </td>
                            <td>
                                <%= tickets[i].qty %>
                            </td>
                            <td>
                                <%= tickets[i].price %> INR
                            </td>
                            <td>
                                <%= tickets[i].qty * tickets[i].price %> INR
                            </td>
                        </tr>
                        <% } %>
                            <% for (let i=0; i < twoWheelers.length; i++) { %>
                                <tr class="billData">
                                    <td>1</td>
                                    <td>
                                        <%= twoWheelers[i].parking_name %>
                                    </td>
                                    <td>
                                        <%= twoWheelers[i].qty %>
                                    </td>
                                    <td>
                                        <%= twoWheelers[i].price %> INR
                                    </td>
                                    <td>
                                        <%= twoWheelers[i].qty * twoWheelers[i].price %> INR
                                    </td>
                                </tr>
                                <% } %>
                                    <% for (let i=0; i < fourWheelers.length; i++) { %>
                                        <tr class="billData">
                                            <td>1</td>
                                            <td>
                                                <%= fourWheelers[i].parking_name %>
                                            </td>
                                            <td>
                                                <%= fourWheelers[i].qty %>
                                            </td>
                                            <td>
                                                <%= fourWheelers[i].price %> INR
                                            </td>
                                            <td>
                                                <%= fourWheelers[i].qty * fourWheelers[i].price %> INR
                                            </td>
                                        </tr>
                                        <% } %>

                </table>
            </div>
            <div class="totalAmount">
                <b>Total</b>
                <p>
                    <%= amount %>INR
                </p>
            </div>
        </div>
        <div class="eventInfo">
            <div class="phoneNumber">
                <div class="callIcone">
                    <svg width="15px" height="15px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
